<?xml version="1.0"?>

<ivysettings>
  <!-- Use same cache dir as pants.ini -->
  <caches defaultCacheDir="${user.home}/.ivy2/pants" useOrigin="false" />

  <!-- For all resolvers, dont try to check for modified files, and never expire cache -->
  <property name="ivy.resolver.default.check.modified" value="false" />
  <property name="ivy.cache.ttl.default" value="eternal" />
  <settings defaultResolver="pants-chain-repos"/>

  <resolvers>
    <chain name="pants-chain-repos" returnFirst="true">
      <!-- <ibiblio name="maven-central" m2compatible="true" descriptor="required"/> -->
      <!-- Local resolver that points back to the global cache -->
      <filesystem name="local" m2compatible="true" local="true" transactional="false">
        <ivy pattern="${user.home}/.m2/repository/[organisation]/[module]/[revision]/[module]-[revision].[ext]" />
        <artifact pattern="${user.home}/.m2/repository/[organisation]/[module]/[revision]/[module]-[revision].[ext]" />
      </filesystem>
    </chain>
  </resolvers>

</ivysettings>
